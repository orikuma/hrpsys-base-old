#!@CMAKE_INSTALL_PREFIX@/bin/hrpsyspy

import popen2
import sys
import time
import os
import waitInput

sys.path.append(os.getcwd())

argc = len(sys.argv)

if argc < 2:
    print "Usage: hrpsys-simulator project.xml [script.py]"
    sys.exit(1)

project = sys.argv[1]
cmd = "sdlsim",project
popen2.Popen3(cmd)
time.sleep(1)

if argc > 2:
   script  = sys.argv[2]
   execfile(script)



